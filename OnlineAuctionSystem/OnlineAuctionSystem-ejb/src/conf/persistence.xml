<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="OnlineAuctionSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/onlineAuctionSystem</jta-data-source>
    <class>entity.AddressEntity</class>
    <class>entity.AuctionListingEntity</class>
    <class>entity.CreditPackageEntity</class>
    <class>entity.CreditTransactionEntity</class>
    <class>entity.CustomerEntity</class>
    <class>entity.EmployeeEntity</class>
    <class>entity.BidEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
